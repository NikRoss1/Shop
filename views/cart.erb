<h2>Your cart</h2>


    <table class="table table-bordered">
  <tr>
    <th>Товар</th>
    <th>Цена</th>
    <th>Количество</th>
  </tr>

  <% total_qty = 0 %>
  <% total_price = 0 %>

  <% @items.each do |item| %>
  <tr>
    <td><%= item[0].title %></td>
    <td><%= item[0].price %> руб.</td>
    <td><%= item[1] %></td>
  </tr>

  <% total_price += item[0].price * item[1].to_i %>
  <% total_qty += item[1].to_i %>
  <% end %>

  <tr style="background: yellow;">
    <td><strong>Сумма:</strong></td>
    <td><%= total_price %> руб.</td>
    <td><%= total_qty %></td>
  </tr>

</table>

<form action="/place_order" method="POST" role="form">

	<input type="hidden" name="order[orders_input]" value="<%= @orders_input %>">

  <div class="form-group">
    <label>Ваше имя</label>
    <input name="orders[name]" type="text" class="form-control" placeholder="Ваше имя" >
  </div>

  <div class="form-group">
    <label>Ваш телефон</label>
    <input name="orders[phone]" type="text" class="form-control" placeholder="Ваш телефон" >
  </div>

  <div class="form-group">
    <label>Адрес доставки</label>
    <input name="orders[address]" type="text" class="form-control" placeholder="Адрес доставки">
  </div>
 

 <button type="submit" class="btn btn-success">Заказать</button>

</form>